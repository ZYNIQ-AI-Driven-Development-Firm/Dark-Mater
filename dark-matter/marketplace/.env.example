# Marketplace Service Environment Configuration

# Authentication (reuse existing auth service)
AUTH_ISSUER_URL=http://localhost:8000/api/v1/auth
AUTH_CLIENT_ID=marketplace-service
AUTH_CLIENT_SECRET=marketplace-secret-key-change-in-production

# Database
POSTGRES_URL=postgresql://postgres:password@localhost:5432/marketplace
REDIS_URL=redis://localhost:6379

# Events
EVENTS_URL=nats://localhost:4222
EVENTS_TYPE=nats

# Feature flags
DM_FEATURE_ENABLED=false

# Service configuration
PUBLIC_BASE_URL=http://localhost:3000
MARKETPLACE_USER_PORT=3001
MARKETPLACE_ADMIN_PORT=3002

# Payment integration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# License signing
LICENSE_SIGNING_KEY=your-jwt-signing-key-change-in-production
LICENSE_ISSUER=https://marketplace.darkmatter.local

# Container registry for agent images
REGISTRY_URL=registry.darkmatter.local
REGISTRY_USERNAME=marketplace
REGISTRY_PASSWORD=registry-password

# Resource limits
MAX_LISTINGS_PER_VENDOR=100
MAX_LICENSE_DURATION_DAYS=365

# Logging
LOG_LEVEL=info
REQUEST_LOG_ENABLED=true