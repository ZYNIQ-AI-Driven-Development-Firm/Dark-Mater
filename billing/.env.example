# Dark Matter Billing Service

PORT=8082
NODE_ENV=development

# Database
POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/darkmatter_billing

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Authentication
AUTH_ISSUER_URL=http://backend:8000
AUTH_JWT_SECRET=your_jwt_secret_here_must_match_backend
AUTH_CLIENT_ID=darkmatter_billing
AUTH_CLIENT_SECRET=your_auth_client_secret

# Feature Flags
DM_FEATURE_BILLING_ENABLED=true
DM_BILLING_MODE=staging
CURRENCY=usd

# CORS
ALLOWED_ORIGINS=http://localhost:3030,http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Webhooks
WEBHOOK_TOLERANCE_SECONDS=300

# Admin
ADMIN_EMAIL=admin@darkmatter.local